entrypoint = "index.html"
modules = ["nodejs-20", "web"]

[nix]
channel = "stable-24_11"
packages = ["static-web-server"]

[deployment]
publicDir = "/"
deploymentTarget = "static"

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Serve static"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f static-web-server || true"
waitForPort = 80

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 1"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "static-web-server --port 5000 --host 0.0.0.0 --root . --directory-listing false --log-level info"

[[workflows.workflow]]
name = "Serve with Python"
author = 42815248
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*server.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 server.py"

[[workflows.workflow]]
name = "Start Server"
author = 42815248
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "static-web-server --config-file .config/static-web-server.toml"

[[ports]]
localPort = 5000
externalPort = 80
