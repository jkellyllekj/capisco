[deployment]
run = ["python", "server.py"]
deploymentTarget = "cloudrun"

[nix]
channel = "stable-24_05"

modules = ["python-3.11", "web"]

entrypoint = "server.py"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[packager]
language = "python3"

[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
author = 42815248
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 server.py"

[agent]
expertMode = true
